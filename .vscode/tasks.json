{   
    "command": "g++", // change this name to something else if you'd like
    "args": [
        "-Wall",
        "/Users/blakemcmurray/Workspaces/ecs-240-project/tokenizer/tokenizer.cpp",  
        "-o",
        "tokenizer.out",  // change this to the name of the file you are choosing to compile and run, this is the only thing you will need to change
        "-std=c++11",  // Tag to compile as c++11
      ],
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
            "relative",
            "${workspaceRoot}"
        ],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}